<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :img, "Изображение"%><br>
    <%= f.file_field :img %>
  </div>
  <div class="field">
    <%= f.label :title, "Название" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "Опинсание" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category_id, "Выберите категорию" %><br>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, prompt: true %>
  </div>
  <div class="actions">
    <%= f.submit "Подтвердить", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
