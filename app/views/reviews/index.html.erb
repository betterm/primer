<p id="notice"><%= notice %></p>

<h1>Все комментарии</h1>

<table>
  <thead>
    <tr>
      <th>Комментарий</th>
      <th>Товар</th>
      <th>Пользователь</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.msg %></td>
        <td><%= review.product_id %></td>
        <td><%= review.user_id %></td>
        <td><%= link_to 'Открыть', review %></td>
        <td><%= link_to 'Редактировать', edit_review_path(review) %></td>
        <td><%= link_to 'Удалить', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый комментарий', new_review_path %>
