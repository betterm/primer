<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <% if admin? && !current_user.is_admin %>
    <div class="field">
      <br><%= f.label :is_admin %>
      <%= f.check_box :is_admin %><br><br>
    </div>
  <% end %>
  <div class="field">
    <%= f.label  :name, "Имя"%><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label  :email, "Электронная почта" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label  :password,"Пароль" %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Подтверждение пароля" %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Подтвердить",class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
