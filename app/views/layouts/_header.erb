<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= image_tag  "logo.png", id: "logo" %>
      <nav >
        <ul class="nav pull-right navbar-nav navbar-right">
          <li><%= link_to "Главная",    root_path %></li>
          <li><%= link_to "Контакты",    help_path %></li>
          <% if signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Аккаунт <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Пользователи", users_path if admin? %></li>
                <li><%= link_to "Категории", categories_path if admin? %></li>
                <li><%= link_to "Товары", products_path if admin? %></li>
                <li><%= link_to "Профиль",edit_user_path(current_user) %></li>
                <li><%= link_to "Выход", logout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Вход", signin_path %></li>
            <li><%= link_to "Регистрация", sign_up_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>